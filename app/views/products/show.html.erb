<% content_for :body_class, 'bg-light' %>

<section class="section product-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @product.name %></h1>

      <div class="feature-image">
        <%= image_tag(@product.image, size: '200x250', class: "product-show") if @product.image.attached? %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">
        <h3 class="subtitle is-4">Category</h3>
        <%= @product.category.name %>
        <h3 class="subtitle is-4">Description</h3>
        <%= @product.description %>
        <br>
        <% if user_signed_in? %>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Delete', @product, method: :delete, data: { confirm: "Are you sure ?" } %> |
          <% end %>
        <%= link_to 'Back', products_path %>
      </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@product.price) %></h4>
        <%= button_to 'Add to cart', line_items_path(product_id: @product), class: 'button is-warning add-to-cart' %>
      </div>
    </div>
  </div>
  <div class="column is-8">
    <div class="content pa4 mt3 bg-white border-radius-3">
      <div class="reviews">
        <!-- Where the reviews/ratings will go -->
        <h1>Reviews</h1>
        <%= render @product.reviews %>
        <div>
          <%= link_to "Add Review", new_product_review_path(@product), class: "btn-custom" %>
        </div>
      </div>
    </div>
  </div>
</section>
